<?xml version="1.0" encoding="utf-8"?>
<!--Define Gallery RecyclerView-->

<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blanccassÃ©"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Outfits"
            android:gravity="center"
            android:fontFamily="@font/poiret_one"
            android:textSize="30sp"
            tools:ignore="NestedWeights" />
        <ImageView
            android:id="@+id/settings_popup_menu"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:paddingBottom="5dp"
            android:scaleType="centerInside"
            android:layout_alignParentEnd="true"
            android:src="@drawable/menu_circles"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewGallery"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:scrollbars="vertical"
        tools:context="com.example.karl.karl.activity.SavedOutfits"
        tools:showIn="@layout/saved_outfits">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bottom_navigation"
        android:background="@color/colorPrimaryDark">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/buttonCloset"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/tiroir"
                android:scaleType="centerInside"
                android:background="@color/colorPrimaryDark"
                android:adjustViewBounds="true"
                android:paddingTop="3dp"
                tools:ignore="NestedWeights" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Closet"
                android:fontFamily="@font/poiret_one"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/buttonOotd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/tenue"
                android:scaleType="centerInside"
                android:background="@color/colorPrimaryDark"
                android:adjustViewBounds="true"
                android:paddingTop="3dp"
                tools:ignore="NestedWeights" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Ootd"
                android:textStyle="bold"
                android:fontFamily="@font/poiret_one"
                android:gravity="center"
                android:layout_marginBottom="3dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/buttonSaved"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/etoile"
                android:scaleType="centerInside"
                android:background="@color/colorPrimaryDark"
                android:adjustViewBounds="true"
                android:paddingTop="3dp"
                tools:ignore="NestedWeights" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Saved"
                android:textStyle="bold"
                android:fontFamily="@font/poiret_one"
                android:gravity="center"
                android:layout_marginBottom="3dp"            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/buttonParams"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/parameter"
                android:scaleType="centerInside"
                android:background="@color/colorPrimaryDark"
                android:adjustViewBounds="true"
                android:paddingTop="3dp"
                tools:ignore="NestedWeights" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Params"
                android:fontFamily="@font/poiret_one"
                android:gravity="center"
                android:layout_marginBottom="3dp"            />

        </LinearLayout>


    </LinearLayout>



</LinearLayout>